html
    head
        title= title
    body
        h1(class='login', id='loginTitle')= message
        h4.userAction#userActionTitle Enter credentials to view #{partial}
        form(action='/users' method="post")
            div
                label(for=username) Username:
                div
                    input(id= "username", name= "username")
            div
                label(for=password) Password:
                div
                    input(id= "password", name= "password")
            div
                input(type= "submit")

        include ./foot.pug
